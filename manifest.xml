<?xml version="1.0" encoding="UTF-8"?>
<OfficeApp xmlns="http://schemas.microsoft.com/office/appforoffice/1.1"
           xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
           xsi:type="MailApp">
  
  <!-- Generate a new GUID at https://www.guidgenerator.com/ -->
  <Id>331421de-d503-4060-9eb3-ffede16599fd</Id>
  <Version>1.0.0.0</Version>
  <ProviderName>Impuls Croatia</ProviderName>
  <DefaultLocale>en-US</DefaultLocale>
  <DisplayName DefaultValue="Email Validator"/>
  <Description DefaultValue="Validates recipient email addresses against approved list"/>
  
  <!-- Replace with your actual hosted icon URLs -->
  <IconUrl DefaultValue="https://vasi25.github.io/outlook_email_validator/icon-32.png"/>
  <HighResolutionIconUrl DefaultValue="https://vasi25.github.io/outlook_email_validator/icon-80.png"/>
  <SupportUrl DefaultValue="https://vasi25.github.io/outlook_email_validator"/>
  
  <AppDomains>
    <AppDomain>vasi25.github.io</AppDomain>
  </AppDomains>
  
  <Hosts>
    <Host Name="Mailbox"/>
  </Hosts>
  
  <Requirements>
    <Sets>
      <Set Name="Mailbox" MinVersion="1.1"/>
    </Sets>
  </Requirements>
  
  <FormSettings>
    <Form xsi:type="ItemEdit">
      <DesktopSettings>
        <!-- Replace with your actual hosted taskpane URL -->
        <SourceLocation DefaultValue="https://vasi25.github.io/outlook_email_validator/taskpane.html"/>
        <RequestedHeight>450</RequestedHeight>
      </DesktopSettings>
    </Form>
  </FormSettings>
  
  <Permissions>ReadWriteMailbox</Permissions>
  
  <Rule xsi:type="RuleCollection" Mode="Or">
    <Rule xsi:type="ItemIs" ItemType="Message" FormType="Edit"/>
    <Rule xsi:type="ItemIs" ItemType="Message" FormType="EditOrRead"/>
  </Rule>
  
  <DisableEntityHighlighting>true</DisableEntityHighlighting>
  
  <VersionOverrides xmlns="http://schemas.microsoft.com/office/mailappversionoverrides" xsi:type="VersionOverridesV1_0">
    <Requirements>
      <bt:Sets DefaultMinVersion="1.3">
        <bt:Set Name="Mailbox"/>
      </bt:Sets>
    </Requirements>
    
    <Hosts>
      <Host xsi:type="MailHost">
        <DesktopFormFactor>
          <FunctionFile resid="Commands.Url"/>
          
          <ExtensionPoint xsi:type="MessageComposeCommandSurface">
            <OfficeTab id="TabDefault">
              <Group id="msgComposeGroup">
                <Label resid="GroupLabel"/>
                <Control xsi:type="Button" id="msgComposeOpenPaneButton">
                  <Label resid="TaskpaneButton.Label"/>
                  <Supertip>
                    <Title resid="TaskpaneButton.Label"/>
                    <Description resid="TaskpaneButton.Tooltip"/>
                  </Supertip>
                  <Icon>
                    <bt:Image size="16" resid="Icon.16x16"/>
                    <bt:Image size="32" resid="Icon.32x32"/>
                    <bt:Image size="80" resid="Icon.80x80"/>
                  </Icon>
                  <Action xsi:type="ShowTaskpane">
                    <SourceLocation resid="Taskpane.Url"/>
                  </Action>
                </Control>
              </Group>
            </OfficeTab>
          </ExtensionPoint>
        </DesktopFormFactor>
      </Host>
    </Hosts>
    
    <Resources>
      <bt:Images>
        <bt:Image id="Icon.16x16" DefaultValue="https://vasi25.github.io/outlook_email_validator/icon-16.png"/>
        <bt:Image id="Icon.32x32" DefaultValue="https://vasi25.github.io/outlook_email_validator/icon-32.png"/>
        <bt:Image id="Icon.80x80" DefaultValue="https://vasi25.github.io/outlook_email_validator/icon-80.png"/>
      </bt:Images>
      <bt:Urls>
        <bt:Url id="Commands.Url" DefaultValue="https://vasi25.github.io/outlook_email_validator/commands.html"/>
        <bt:Url id="Taskpane.Url" DefaultValue="https://vasi25.github.io/outlook_email_validator/taskpane.html"/>
      </bt:Urls>
      <bt:ShortStrings>
        <bt:String id="GroupLabel" DefaultValue="Email Validator"/>
        <bt:String id="TaskpaneButton.Label" DefaultValue="Check Emails"/>
      </bt:ShortStrings>
      <bt:LongStrings>
        <bt:String id="TaskpaneButton.Tooltip" DefaultValue="Verify recipient email addresses"/>
      </bt:LongStrings>
    </Resources>
  </VersionOverrides>
</OfficeApp>
